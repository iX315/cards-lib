{
	"description": "A simple typescript library for handling card games",
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"format": "prettier --config .prettierrc.json --write ."
	},
	"peerDependencies": {},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"name": "cards-lib",
	"author": "Jury Giannelli",
	"module": "dist/cards-lib.esm.js",
	"size-limit": [
		{
			"path": "dist/cards-lib.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/cards-lib.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@jest/test-sequencer": "^26.6.3",
		"@size-limit/preset-small-lib": "^4.10.2",
		"@types/d3-array": "^2.9.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"prettier": "2.2.1",
		"size-limit": "^4.10.2",
		"tsdx": "^0.14.1",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"chalk": "^4.1.1",
		"d3-array": "^2.12.1",
		"nanoid": "^3.1.22"
	}
}
