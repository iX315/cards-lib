{
	"name": "@ix315/cards-lib",
	"description": "A simple typescript library for handling card games",
	"author": {
		"name": "Jury Giannelli",
		"email": "iX315@me.com"
	},
	"version": "0.2.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/iX315/cards-lib"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"module": "dist/cards-lib.esm.js",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"start": "dts watch",
		"build": "dts build",
		"test": "dts test",
		"lint": "dts lint",
		"prepare": "dts build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"format": "prettier --config .prettierrc.json --write ."
	},
	"peerDependencies": {},
	"husky": {
		"hooks": {
			"pre-commit": "dts lint"
		}
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"size-limit": [
		{
			"path": "dist/cards-lib.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/cards-lib.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@jest/test-sequencer": "^27.4.6",
		"@size-limit/preset-small-lib": "^7.0.5",
		"@types/d3-array": "^2.9.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.7",
		"prettier": "2.5.1",
		"size-limit": "^7.0.5",
		"tslib": "^2.3.1",
		"typescript": "^4.5.4",
		"dts-cli": "^1.1.5"
	},
	"dependencies": {
		"chalk": "^4.1.1",
		"d3-array": "^2.12.1",
		"nanoid": "^3.1.30"
	}
}
